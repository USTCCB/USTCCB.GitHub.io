<body>
    <div class="container">
        <div class="header">
            <h1>在线文档分享</h1>
            <p>轻松分享文本和文档</p>
        </div>

        <div class="card">
            <div class="tab-container">
                <button class="tab active" onclick="switchTab('text')">文本分享</button>
                <button class="tab" onclick="switchTab('file')">文件上传</button>
            </div>

            <div id="textShare">
                <textarea class="input-area" placeholder="在这里输入要分享的文本..."></textarea>
                <button class="button" onclick="saveText()">保存文本</button>
            </div>

            <div id="fileShare" style="display: none;">
                <div class="file-upload" onclick="document.getElementById('fileInput').click()">
                    <input type="file" id="fileInput" style="display: none;" onchange="handleFileSelect(event)">
                    <div class="file-icon">📁</div>
                    <p>点击或拖拽文件到此处上传</p>
                    <p style="color: #666; font-size: 14px;">支持所有类型的文档</p>
                    <div id="filePreview"></div>
                </div>
                <button class="button" onclick="saveFile()">上传文件</button>
            </div>
        </div>

        <div class="card">
            <h2>已分享的内容</h2>
            <div class="file-grid" id="fileList"></div>
        </div>
    </div>

    <div class="notification" id="notification"></div>

    <script>
        // 获取已保存的文件列表
        let files = JSON.parse(localStorage.getItem('sharedFiles') || '[]');

        // 切换标签
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelector(`[onclick="switchTab('${tab}')"]`).classList.add('active');
            
            document.getElementById('textShare').style.display = tab === 'text' ? 'block' : 'none';
            document.getElementById('fileShare').style.display = tab === 'file' ? 'block' : 'none';
        }

        // 获取文件图标
        function getFileIcon(filename) {
            const ext = filename.split('.').pop().toLowerCase();
            const icons = {
                pdf: '📕',
                doc: '📘',
                docx: '📘',
                txt: '📝',
                xls: '📗',
                xlsx: '📗',
                jpg: '🖼️',
                jpeg: '🖼️',
                png: '🖼️',
                gif: '🖼️',
                default: '📄'
            };
            return icons[ext] || icons.default;
        }

        // 保存文本
        function saveText() {
            const text = document.querySelector('.input-area').value;
            if (!text) {
                showNotification('请输入要分享的内容');
                return;
            }

            const filename = `文本_${new Date().toLocaleString().replace(/[/:]/g, '-')}.txt`;
            files.unshift({
                type: 'text',
                name: filename,
                content: text,
                size: new Blob([text]).size,
                date: new Date().toLocaleString(),
                id: Date.now()
            });

            updateFileList();
            document.querySelector('.input-area').value = '';
            showNotification('保存成功');
        }

        // 处理文件选择
        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (file) {
                const preview = document.getElementById('filePreview');
                preview.innerHTML = `
                    <div style="margin-top: 15px; padding: 10px; background: rgba(35, 166, 213, 0.1); border-radius: 5px;">
                        <p><strong>${getFileIcon(file.name)} ${file.name}</strong></p>
                        <p style="color: #666;">大小: ${(file.size / 1024).toFixed(2)} KB</p>
                    </div>
                `;
            }
        }

        // 保存文件
        function saveFile() {
            const file = document.getElementById('fileInput').files[0];
            if (!file) {
                showNotification('请选择文件');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                files.unshift({
                    type: 'file',
                    name: file.name,
                    content: e.target.result,
                    size: file.size,
                    date: new Date().toLocaleString(),
                    id: Date.now()
                });

                updateFileList();
                document.getElementById('fileInput').value = '';
                document.getElementById('filePreview').innerHTML = '';
                showNotification('上传成功');
            };
            reader.readAsDataURL(file);
        }

        // 更新文件列表
        function updateFileList() {
            localStorage.setItem('sharedFiles', JSON.stringify(files));
            const fileList = document.getElementById('fileList');
            fileList.innerHTML = '';

            files.forEach(file => {
                const item = document.createElement('div');
                item.className = 'file-item';
                
                if (file.type === 'text') {
                    // 对于文本类型，显示内容预览
                    const previewText = file.content.length > 50 
                        ? file.content.substring(0, 50) + '...' 
                        : file.content;
                    
                    item.innerHTML = `
                        <div class="file-icon">📝</div>
                        <div class="file-name">${previewText}</div>
                        <div class="file-info">
                            <div>保存时间: ${file.date}</div>
                            <div>字数: ${file.content.length}</div>
                        </div>
                    `;
                } else {
                    // 对于其他文件类型保持原样
                    item.innerHTML = `
                        <div class="file-icon">${getFileIcon(file.name)}</div>
                        <div class="file-name">${file.name}</div>
                        <div class="file-info">
                            <div>大小: ${(file.size / 1024).toFixed(2)} KB</div>
                            <div>日期: ${file.date}</div>
                        </div>
                    `;
                }

                item.onclick = () => {
                    if (file.type === 'text') {
                        copyToClipboard(file.content);
                        showNotification('文本已复制到剪贴板');
                    } else {
                        downloadFile(file);
                    }
                };

                fileList.appendChild(item);
            });
        }

        // 复制到剪贴板
        function copyToClipboard(text) {
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
        }

        // 下载文件
        function downloadFile(file) {
            const link = document.createElement('a');
            link.href = file.content;
            link.download = file.name;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // 显示通知
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 2000);
        }

        // 初始化显示文件列表
        updateFileList();

        // 添加拖拽上传功能
        const dropZone = document.querySelector('.file-upload');

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#23d5ab';
            dropZone.style.background = 'rgba(35, 213, 171, 0.1)';
        });

        dropZone.addEventListener('dragleave', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#23a6d5';
            dropZone.style.background = 'none';
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#23a6d5';
            dropZone.style.background = 'none';
            
            const file = e.dataTransfer.files[0];
            if (file) {
                document.getElementById('fileInput').files = e.dataTransfer.files;
                handleFileSelect({target: {files: [file]}});
            }
        });
    </script>
</body>
</html> 
