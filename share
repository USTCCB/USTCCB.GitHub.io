<body>
    <div class="container">
        <div class="header">
            <h1>åœ¨çº¿æ–‡æ¡£åˆ†äº«</h1>
            <p>è½»æ¾åˆ†äº«æ–‡æœ¬å’Œæ–‡æ¡£</p>
        </div>

        <div class="card">
            <div class="tab-container">
                <button class="tab active" onclick="switchTab('text')">æ–‡æœ¬åˆ†äº«</button>
                <button class="tab" onclick="switchTab('file')">æ–‡ä»¶ä¸Šä¼ </button>
            </div>

            <div id="textShare">
                <textarea class="input-area" placeholder="åœ¨è¿™é‡Œè¾“å…¥è¦åˆ†äº«çš„æ–‡æœ¬..."></textarea>
                <button class="button" onclick="saveText()">ä¿å­˜æ–‡æœ¬</button>
            </div>

            <div id="fileShare" style="display: none;">
                <div class="file-upload" onclick="document.getElementById('fileInput').click()">
                    <input type="file" id="fileInput" style="display: none;" onchange="handleFileSelect(event)">
                    <div class="file-icon">ğŸ“</div>
                    <p>ç‚¹å‡»æˆ–æ‹–æ‹½æ–‡ä»¶åˆ°æ­¤å¤„ä¸Šä¼ </p>
                    <p style="color: #666; font-size: 14px;">æ”¯æŒæ‰€æœ‰ç±»å‹çš„æ–‡æ¡£</p>
                    <div id="filePreview"></div>
                </div>
                <button class="button" onclick="saveFile()">ä¸Šä¼ æ–‡ä»¶</button>
            </div>
        </div>

        <div class="card">
            <h2>å·²åˆ†äº«çš„å†…å®¹</h2>
            <div class="file-grid" id="fileList"></div>
        </div>
    </div>

    <div class="notification" id="notification"></div>

    <script>
        // è·å–å·²ä¿å­˜çš„æ–‡ä»¶åˆ—è¡¨
        let files = JSON.parse(localStorage.getItem('sharedFiles') || '[]');

        // åˆ‡æ¢æ ‡ç­¾
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelector(`[onclick="switchTab('${tab}')"]`).classList.add('active');
            
            document.getElementById('textShare').style.display = tab === 'text' ? 'block' : 'none';
            document.getElementById('fileShare').style.display = tab === 'file' ? 'block' : 'none';
        }

        // è·å–æ–‡ä»¶å›¾æ ‡
        function getFileIcon(filename) {
            const ext = filename.split('.').pop().toLowerCase();
            const icons = {
                pdf: 'ğŸ“•',
                doc: 'ğŸ“˜',
                docx: 'ğŸ“˜',
                txt: 'ğŸ“',
                xls: 'ğŸ“—',
                xlsx: 'ğŸ“—',
                jpg: 'ğŸ–¼ï¸',
                jpeg: 'ğŸ–¼ï¸',
                png: 'ğŸ–¼ï¸',
                gif: 'ğŸ–¼ï¸',
                default: 'ğŸ“„'
            };
            return icons[ext] || icons.default;
        }

        // ä¿å­˜æ–‡æœ¬
        function saveText() {
            const text = document.querySelector('.input-area').value;
            if (!text) {
                showNotification('è¯·è¾“å…¥è¦åˆ†äº«çš„å†…å®¹');
                return;
            }

            const filename = `æ–‡æœ¬_${new Date().toLocaleString().replace(/[/:]/g, '-')}.txt`;
            files.unshift({
                type: 'text',
                name: filename,
                content: text,
                size: new Blob([text]).size,
                date: new Date().toLocaleString(),
                id: Date.now()
            });

            updateFileList();
            document.querySelector('.input-area').value = '';
            showNotification('ä¿å­˜æˆåŠŸ');
        }

        // å¤„ç†æ–‡ä»¶é€‰æ‹©
        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (file) {
                const preview = document.getElementById('filePreview');
                preview.innerHTML = `
                    <div style="margin-top: 15px; padding: 10px; background: rgba(35, 166, 213, 0.1); border-radius: 5px;">
                        <p><strong>${getFileIcon(file.name)} ${file.name}</strong></p>
                        <p style="color: #666;">å¤§å°: ${(file.size / 1024).toFixed(2)} KB</p>
                    </div>
                `;
            }
        }

        // ä¿å­˜æ–‡ä»¶
        function saveFile() {
            const file = document.getElementById('fileInput').files[0];
            if (!file) {
                showNotification('è¯·é€‰æ‹©æ–‡ä»¶');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                files.unshift({
                    type: 'file',
                    name: file.name,
                    content: e.target.result,
                    size: file.size,
                    date: new Date().toLocaleString(),
                    id: Date.now()
                });

                updateFileList();
                document.getElementById('fileInput').value = '';
                document.getElementById('filePreview').innerHTML = '';
                showNotification('ä¸Šä¼ æˆåŠŸ');
            };
            reader.readAsDataURL(file);
        }

        // æ›´æ–°æ–‡ä»¶åˆ—è¡¨
        function updateFileList() {
            localStorage.setItem('sharedFiles', JSON.stringify(files));
            const fileList = document.getElementById('fileList');
            fileList.innerHTML = '';

            files.forEach(file => {
                const item = document.createElement('div');
                item.className = 'file-item';
                
                if (file.type === 'text') {
                    // å¯¹äºæ–‡æœ¬ç±»å‹ï¼Œæ˜¾ç¤ºå†…å®¹é¢„è§ˆ
                    const previewText = file.content.length > 50 
                        ? file.content.substring(0, 50) + '...' 
                        : file.content;
                    
                    item.innerHTML = `
                        <div class="file-icon">ğŸ“</div>
                        <div class="file-name">${previewText}</div>
                        <div class="file-info">
                            <div>ä¿å­˜æ—¶é—´: ${file.date}</div>
                            <div>å­—æ•°: ${file.content.length}</div>
                        </div>
                    `;
                } else {
                    // å¯¹äºå…¶ä»–æ–‡ä»¶ç±»å‹ä¿æŒåŸæ ·
                    item.innerHTML = `
                        <div class="file-icon">${getFileIcon(file.name)}</div>
                        <div class="file-name">${file.name}</div>
                        <div class="file-info">
                            <div>å¤§å°: ${(file.size / 1024).toFixed(2)} KB</div>
                            <div>æ—¥æœŸ: ${file.date}</div>
                        </div>
                    `;
                }

                item.onclick = () => {
                    if (file.type === 'text') {
                        copyToClipboard(file.content);
                        showNotification('æ–‡æœ¬å·²å¤åˆ¶åˆ°å‰ªè´´æ¿');
                    } else {
                        downloadFile(file);
                    }
                };

                fileList.appendChild(item);
            });
        }

        // å¤åˆ¶åˆ°å‰ªè´´æ¿
        function copyToClipboard(text) {
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
        }

        // ä¸‹è½½æ–‡ä»¶
        function downloadFile(file) {
            const link = document.createElement('a');
            link.href = file.content;
            link.download = file.name;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // æ˜¾ç¤ºé€šçŸ¥
        function showNotification(message) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 2000);
        }

        // åˆå§‹åŒ–æ˜¾ç¤ºæ–‡ä»¶åˆ—è¡¨
        updateFileList();

        // æ·»åŠ æ‹–æ‹½ä¸Šä¼ åŠŸèƒ½
        const dropZone = document.querySelector('.file-upload');

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#23d5ab';
            dropZone.style.background = 'rgba(35, 213, 171, 0.1)';
        });

        dropZone.addEventListener('dragleave', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#23a6d5';
            dropZone.style.background = 'none';
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#23a6d5';
            dropZone.style.background = 'none';
            
            const file = e.dataTransfer.files[0];
            if (file) {
                document.getElementById('fileInput').files = e.dataTransfer.files;
                handleFileSelect({target: {files: [file]}});
            }
        });
    </script>
</body>
